<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/man_hinh_Kq"
        android:layout_width="match_parent"
        android:layout_height="246dp"
        android:background="#DDDDDD"
        android:fontFamily="monospace"
        android:gravity="center"
        android:text="0"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="80sp"
        tools:ignore="RtlCompat"></TextView>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:id="@+id/cE"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:backgroundTint="#bcbcbc"
            android:text="CE"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="normal" />

        <Button
            android:id="@+id/c"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:backgroundTint="#bcbcbc"
            android:text="C"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="normal" />

        <Button
            android:id="@+id/bS"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:backgroundTint="#bcbcbc"
            android:text="BS"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="normal" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:backgroundTint="#bcbcbc"
            android:text="/"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="normal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:id="@+id/soBay"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:backgroundTint="#bcbcbc"
            android:text="7"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="normal" />

        <Button
            android:id="@+id/soTam"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:backgroundTint="#bcbcbc"
            android:text="8"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="normal" />

        <Button
            android:id="@+id/soChin"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:backgroundTint="#bcbcbc"
            android:text="9"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="normal" />

        <Button
            android:id="@+id/dauNhan"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:backgroundTint="#bcbcbc"
            android:text="x"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="normal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:id="@+id/soBon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:backgroundTint="#DDDDDD"
            android:text="4"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="normal" />

        <Button
            android:id="@+id/soNam"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:backgroundTint="#DDDDDD"
            android:text="5"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="normal" />

        <Button
            android:id="@+id/soSau"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:backgroundTint="#DDDDDD"
            android:text="6"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="normal" />

        <Button
            android:id="@+id/dauTru"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:backgroundTint="#bcbcbc"
            android:text="-"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="normal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:id="@+id/soMot"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:backgroundTint="#DDDDDD"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="normal" />

        <Button
            android:id="@+id/soHai"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:backgroundTint="#DDDDDD"
            android:text="2"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="normal" />

        <Button
            android:id="@+id/soBa"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:backgroundTint="#DDDDDD"
            android:text="3"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="normal" />

        <Button
            android:id="@+id/dauCong"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:backgroundTint="#bcbcbc"
            android:text="+"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="normal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:backgroundTint="#bcbcbc"
            android:text="+/-"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="normal" />

        <Button
            android:id="@+id/soKhong"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:backgroundTint="#DDDDDD"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="normal" />

        <Button
            android:id="@+id/dauCham"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:backgroundTint="#bcbcbc"
            android:text="."
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="normal" />

        <Button
            android:id="@+id/dauBang"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:backgroundTint="#bcbcbc"
            android:text="="
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="normal" />
    </LinearLayout>
</LinearLayout>









